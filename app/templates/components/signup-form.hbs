<div class="form" id="signupform">
  <div class="form-group">
    <label for="">Name</label>
    {{input value=name placeholder="Enter your name" id="name"  class="form-control"}}
  </div>

  <div class="form-group">
    <label for="">Email Address</label>
    {{input value=email placeholder="Enter your email" id="email" type="email"  class="form-control"}}
  </div>

  <div class="form-group">
    <label for="">Password</label>
    {{input value=password placeholder="Enter your password" id="password"  class="form-control" type="password"}}
  </div>

  <div class="form-group">
    <label for="">Portfolio image</label>
    {{input value=image placeholder="Enter your image link" id="image" class="form-control"}}
  </div>


  <div class="form-group">
    <label for="">Phone Number</label>
    {{input value=phone placeholder="Enter your phone number" id="phone"  class="form-control"}}
  </div>

  <div class="form-group">
    <label for="">Location</label>
    {{input value=location placeholder="Enter your city" id="location" class="form-control"}}
  </div>

  <div class="form-group">
    <label for="">Brief description</label>
    {{textarea  rows="7" value=description placeholder="Enter a brief description about yourself" id="description" class="form-control" }}
  </div>





<button type="button" name="button" class="btn btn-md btn-success" {{action 'signUp'}}>SIGN UP</button>
</div>
