
<div class="col-md-4">
  <div class="panel panel-success">
    <div class="panel-heading">
      <h6>{{product.name}}</h6>
      <h6>{{#link-to 'look-up' product.seller.id}}Contact: {{product.seller.firstname}} {{product.seller.lastname}}{{/link-to}}</h6>
    </div>
    <div class="panel-body">
      <img src="{{product.img}}" class="images1 img-responsive">
      <div class="center">
        <span class="label label-warning"><b>KSH</b> {{product.price}}</span>
        <span class="label label-success">{{product.quantity}} {{product.name}}s</span>
         <p>{{product.description}}</p>
      </div>
    </div>
    <div class="panel-footer">
      <button class="btn btn-warning" {{action 'addToCart' product}}> {{fa-icon "shopping-cart"}} Add to Cart</button>
    </div>
  </div>
</div>
