<div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">

  <h4>Update {{product.name}}'s {{product.price}}</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="name1">Name</label>
        {{input value=name1 id="name1" placeholder=product.name class="form-control"}}
      </div>

      <div class="form-group">
        <label for="price1">Price</label>
        {{input value=price1 id="price1" placeholder=product.price class="form-control"}}
      </div>

      <div class="form-group">
        <label for="description">Description</label>
        {{input value=description1 id="description1" placeholder=product.description class="form-control"}}
      </div>

      <div class="form-group">
        <label for=quantity>Quantity</label>
        {{input value=quantity1 id="quantity1" placeholder=product.quantity class="form-control"}}
      </div>

      <div class="form-group">
        <label for="image">Image URL</label>
        {{input value=image1 id="image1" placeholder=product.image class="form-control" placeholder=product.image}}
      </div>

      <button {{action 'update' product}} class="btn btn-warning">Save Changes</button>
    </form>
  </div>
</div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>

      </div>
    </div>
  </div>
</div>



  <button type="button" class="btn btn-success fg" data-toggle="modal" data-target="#exampleModalLong" {{action 'updateProductForm'}}>
    Update
  </button>
