<div class="container">
  <h1>LOGIN</h1>
  <form class="form signupform"  method="post">
    <div class="form-group">
      <label for="">Email Address</label>
      {{input class="form-control" placeholder="Enter your email" value=userEmail}}
    </div>

    <div class="form-group">
      <label for="">Password</label>
      {{input class="form-control" placeholder="Enter your password" type="password" value=userPassword}}
    </div>

    <button type="button" name="button" class="btn btn-sm btn-success centerrr" {{action 'login'}}>LOGIN</button>

    {{#link-to 'signup'}}Are you a new user?{{/link-to}}
  </form>

</div>
